<mvc:View controllerName="ui5TileTrial.controller.Login"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:l="sap.ui.layout">
	<Page class="myLoginPage" showHeader="false">
		<l:VerticalLayout width="100%">
			<l:content>
				<VBox id="id_vbox" justifyContent="Center" alignItems="Center">
				<Panel>
						<VBox>
							<Input id="nameInput" class="sapUiSmallMarginBottom" type="Text"
								placeholder="Enter Name ..." valueStateText="Name must not be empty. Maximum 10 characters." />
							<Input id="pwInput" type="Password" placeholder="Enter password ..." />
							<HBox>
								<Button text="Login" press="onLogin"></Button>
								<Button text="Register" press="onLogin"></Button>
							</HBox>
						</VBox>
				</Panel>
				</VBox>
			</l:content>
		</l:VerticalLayout>

	</Page>
</mvc:View>